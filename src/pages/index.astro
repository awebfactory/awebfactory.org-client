---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import '../styles/global.css';
---

<Layout title="Welcome to Astro.">
	<main>
		<h1>AWebFactory <span class="text-texas-rose-500">Project Flow and Tracker</span></h1>
		<h2 class="font-sub-header text-wild-willow-400">web application factory pattern</h2>
		<h3>workspaces for web application process</h3>
		<ul role="list" class="link-card-grid">
			<Card
				href="https://awebfactory.com/projects"
				title="Case Studies"
				body="An overview, emphasizing what makes each project especially useful"
			/>
			<Card
				href="https://awebfactory.com/projects"
				title="Process"
				body="The lean and agile artifacts of project history through all iterations to date"
			/>
			<Card
				href="https://awebfactory.com/projects"
				title="Resources"
				body="Projects with real value #BuiltInPublic so we can #LearnInPublic"
			/>
			<Card
				href="https://astro.build/chat/"
				title="Online dev"
				body="Open Source Repos with no vendor lock-in running on online dev environmentsï¸"
			/>
		</ul>
	</main>
</Layout>