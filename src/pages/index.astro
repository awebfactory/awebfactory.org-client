---
import BaseHead from '../components/BaseHead.astro';
import HeroHome from '../components/HeroHome.astro';
import Footer from '../components/Footer.astro';
import Card from '../components/Card.astro';
import { SITE_COMPANY, SITE_DESCRIPTION, SITE_NAME, SITE_SLOGAN1, SITE_SLOGAN2 } from '../config'
---


<!DOCTYPE html>
<html lang="en">
<head>
	<BaseHead company={SITE_COMPANY} name={SITE_NAME} description={SITE_DESCRIPTION} />
</head>
<body>
  <HeroHome />
	<main>
		<ul role="list" class="link-card-grid">
			<Card
				href="https://awebfactory.com/projects"
				title="Case Studies"
				body="An overview, emphasizing what makes each project especially useful"
			/>
			<Card
				href="https://awebfactory.com/projects"
				title="Process"
				body="The lean and agile artifacts of project history through all iterations to date"
			/>
			<Card
				href="https://awebfactory.com/projects"
				title="Resources"
				body="Projects with real value #BuiltInPublic so we can #LearnInPublic"
			/>
			<Card
				href="https://astro.build/chat/"
				title="Online dev"
				body="Open Source Repos with no vendor lock-in running on online dev environments️"
			/>
		</ul>
	</main>
<Footer />
</body>
</html>